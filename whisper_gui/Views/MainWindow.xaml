<ui:FluentWindow x:Class="whisper_gui.Views.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:whisper_gui.Views"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:viewModels="clr-namespace:whisper_gui.ViewModels"
                 Title="MainWindow"
                 Width="800"
                 Height="450"
                 d:DataContext="{d:DesignInstance Type=viewModels:MainWindowViewModel}"
                 WindowStyle="None"
                 mc:Ignorable="d">
    <StackPanel>
        <ui:TitleBar Title="Whiser GUI" />
        <StackPanel Margin="15,0,15,0">
            <Label Content="Options" FontWeight="Bold" />
            <ui:Card Margin="0,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon FontSize="24" Symbol="Globe32" />
                        <Label Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               Content="Language"
                               FontWeight="Bold" />
                    </StackPanel>

                    <ComboBox Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
            </ui:Card>
            <Label Margin="0,15,0,0"
                   Content="List"
                   FontWeight="Bold" />
            <ui:Card Margin="0,5,0,0">
                <StackPanel>
                    <ui:Button Content="Open File(s)" />
                    <ui:DataGrid Margin="0,15,0,0" />
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </StackPanel>
</ui:FluentWindow>
